{
	"compilerOptions": {
		"noImplicitAny": false,
		"target": "es6",
		"sourceMap": true,
		"removeComments": true,
		"allowJs": true,
		"outDir": "./build/",
		"module": "commonjs",
		"lib": [
			"dom",
			"es7"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"bower_components"
	],
	"awesomeTypescriptLoaderOptions": {
		"transpileOnly": true,
		"emitRequireType": true
	}
}
