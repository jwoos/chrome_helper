{
	"compilerOptions": {
		"noImplicitAny": false,
		"target": "es6",
		"sourceMap": true,
		"removeComments": true,
		"allowJs": true,
		"outDir": "./build/",
		"module": "commonjs"
	},
	"include": [
		"./src/**/*",
		"./test/**/*"
	],
	"exclude": [
		"node_modules",
		"bower_components"
	],
	"awesomeTypescriptLoaderOptions": {
		"transpileOnly": true,
		"emitRequireType": true
	}
}
